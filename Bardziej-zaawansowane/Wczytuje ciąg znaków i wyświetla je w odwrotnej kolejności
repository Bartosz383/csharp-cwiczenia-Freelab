using System;

namespace ConsoleApplication
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Podaj ciąg znaków:");
            string tekst = Console.ReadLine();

            for (int i = tekst.Length - 1; i >= 0; i--)    // Pętla for
            {
                Console.Write(tekst[i]);
            }
            Console.WriteLine();
        }
    }
}
